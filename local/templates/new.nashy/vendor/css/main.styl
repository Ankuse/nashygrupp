@font-face {
  font-family: "GothamPro";
  src: url("../fonts/GothamProRegular/GothamProRegular.eot");
  src: url("../fonts/GothamProRegular/GothamProRegular.eot?#iefix") format("embedded-opentype"), url("../fonts/GothamProRegular/GothamProRegular.woff") format("woff"), url("../fonts/GothamProRegular/GothamProRegular.ttf") format("truetype");
  font-style: normal;
  font-weight: normal;
}
body {
  font-family: "GothamPro", "Arial", sans-serif;
  color: #000;
  line-height: 1.42857;
  overflow-x: hidden;
  width: 100%;
}
.navigation_list
  margin: 0;
  padding: 0;
  width: 100%;
  float: left;
.navigation_list > li
  list-style: none;
  line-height: 1;
  margin: 0;
  padding: 0;
  height: 55px;
.navigation_list > li a
  margin: 0;
  padding: 0 11px;
  text-decoration: none;
  height: 55px;
  line-height: 57px;
  color: #000000;
  font-size: 15px;
  text-transform: uppercase;
.navigation_list > li a
  font-size: 13px;
.navigation_list > li a:hover
  color: #d70022;
.navigation_list-all
  width: 100%;
.category_icon
  max-height: 12px;
  margin-right: 4px;
  margin-left: 11px;
img
  display: block;
.navigation_list > li > a.category
  font-weight: 600;
.top-navigation
  border-top: 1px solid #dddddd;
  border-bottom: 1px solid #dddddd;
  width: 100%;
  box-shadow: 0 2px 2px 0 #dddddd;
.col-auto
  -ms-flex: 0 0 auto;
  flex: 0 0 auto;
  width: auto;
  max-width: none;
.navigation-container_left ul
  margin: 0;
  padding: 0;
.navigation-main
  width: 100%
  

.navigation-container_left
  background-color: #fff;
  border-right: 1px solid #e8e8e8;
  padding: 10px 0;
  height: 100%;
  max-height: 690px;
  overflow: hidden;
  z-index: 2;
  position: relative;
  left: 0;
  top: 0;
.navigation-container_left ul > li
  list-style: none;
  line-height: 1;
  padding: 10px 32px;
  background-image: url(https://testb2b.slav-dom.ru/local/templates/webcompany/style/img/svg/arrow-right.svg);
  background-position: right 15px center;
  background-repeat: no-repeat;
  background-size: auto 10px;
.navigation-container_left ul > li > span
  color: #151b23;
  font-size: 14px;
  cursor: default;
  

.navigation-container_mid
  padding: 0;
